{
    "cSpell.words": [
        "blackmesa",
        "csgo",
        "gamesvr",
        "laclede",
        "laclede's",
        "lacledeâ€™s",
        "lacledeslan",
        "reindex",
        "tf2"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "markdownlint.ignore": [
        "LICENSE"
    ],
    "shellcheck.exclude": ["1091"],
    "search.exclude": {
        "**/.git": true,
        "**/repos/**": true
    },
    "terminal.integrated.scrollback": 6000,
    "[markdown]": {
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
        "editor.rulers": [120],
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.wordWrap": "on"
    },
    "[shellscript]": {
        "editor.rulers": [100],
        "files.eol": "\n"
    }
}
